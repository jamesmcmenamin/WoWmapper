<Window x:Class="WoWmapper.Overlay.OverlayWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WoWmapper.Overlay"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="WoWmapper Overlay"
        Width="640"
        Height="480"
        AllowsTransparency="True"
        BorderThickness="0"
        ResizeMode="NoResize"
        ShowInTaskbar="False"
        WindowStyle="None"
        mc:Ignorable="d">
    <Window.Background>
        <SolidColorBrush Color="Transparent" />
    </Window.Background>
    <Grid>
        <StackPanel Name="StackNotifications"
                    Width="400"
                    Margin="0,20"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    IsHitTestVisible="False" />
        <Canvas Name="CanvasCrosshair" IsHitTestVisible="False">
            <Image Name="ImageCrosshair"
                   Width="64"
                   Height="64"
                   IsHitTestVisible="False"
                   Source="Images/Crosshair.PNG"
                   Visibility="Hidden" />
        </Canvas>
    </Grid>
</Window>
